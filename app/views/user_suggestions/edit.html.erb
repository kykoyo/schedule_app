<h1>Vote for dates</h1>
<p>
    <%= @event.title %>
</p>

<%= form_for(@user) do |f| %>
<%= f.fields_for :user_suggestions, @user_suggestions do |user_suggestion| %>
<p>
    <%= user_suggestion.label :suggestion_date %>
</p>
<p>
    <%= user_suggestion.label :tag %>
    <%= user_suggestion.select :tag, options_for_select({' '=>'0', '◎'=>'1', '△'=>'2', '×'=>'3'}) %>
</p>
<% end %>
<p>
    <%= f.submit %>
</p>
<% end %>