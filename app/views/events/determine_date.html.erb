<h1>日付を決めよう</h1>

<table class="table table-striped">
    <tr>
        <td>候補日程</td>
        <td>◎</td>
        <td>△</td>
        <td>×</td>
        <td>未回答</td>
    </tr>
    <% @suggestions.each do |suggestion| %>
    <% count_hash=suggestion.suggestion_hash[0] %>
    <% user_hash=suggestion.suggestion_hash[1] %>
    <tr>
        <td><%= suggestion.suggestion_date %></td>
        <td><%= count_hash[1] %></td>
        <td><%= count_hash[2] %></td>
        <td><%= count_hash[3] %></td>
        <td><%= count_hash[0] %></td>
        <td>
            <%= form_for @event, :url => determine_post_path(@user, @event) do |f| %>
            <%= f.hidden_field :determine_date_id, value: suggestion.id %>
            <%= f.submit '日付を確定', name: suggestion.id %>
            <% end %>
        </td>
    </tr>
    <tr>
        <td></td>
        <% for i in [1, 2, 3, 0] %>
        <td>
        <% user_hash[i].each do |user| %>
            <%= user.username %><br>
        <% end %>
        </td>
        <% end %>
    </tr>
    <% end %>
</table>

<%= link_to '戻る',
              user_events_path(@user), :class => 'btn btn-default'  %>
