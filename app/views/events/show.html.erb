<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name('イベント名') %>:</strong></dt>
  <dd><%= @event.title %></dd>
  <dt><strong><%= model_class.human_attribute_name('幹事') %>:</strong></dt>
  <dd><%= @event.owner.username %></dd>
  <% if @event.held_at %>
  <dt><strong><%= model_class.human_attribute_name('時間') %>:</strong></dt>
  <dd><%= @event.held_at %></dd>
  <% end %>
    <dt><strong><%= model_class.human_attribute_name('参加者') %>:</strong></dt>
  <% @event.users.each do |user| %>
  <dd>
    <%= user.username %>
  </dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_events_path(@user), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_event_path(@user, @event), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_event_path(@user, @event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
