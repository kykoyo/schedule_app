<% if flash[:errors] %>
<ul>
    <% flash[:errors].each do |error_line| %>
    <ol>
        <%= error_line %>
    </ol>
    <% end %>
</ul>
<% end %>

<%= form_for [@user, @event] do |f| %>
<p>
    <%= f.label :title, 'イベント名' %><br>
    <%= f.text_field  :title %>
</p>
<p>
    <%= f.label :price, '一人当たりの会費' %>
    <a href='https://docs.google.com/document/d/1y0kV64edndOKLhZYa4j9j_y6LfdWyhdxskJ2Od3zg5Y/edit' target="_blank"> 会費について</a><br>
    <%= f.text_field :price %>
</p>

<p>
    参加者:<br>
<% User.all.each do |user| %>
<%= check_box_tag "event[user_ids][]", user.id, @event.users.include?(user), id: "events_user_ids_#{user.id}" %>
<%= label_tag "events[user_ids][#{user.id}]", user.username %>
</p>
<% end %>

<p>
    <%= label_tag "Suggestion Date", '候補日（改行で区切る）' %><br>
    <%= text_area_tag "Suggestion_Date", @suggestions, row: 10, size: "60x5" %>
</p>
<p>
<% if type==:new %>
    <%= f.submit 'イベントを作成', :class => 'btn btn-default' %>
<% else %>
    <%= f.submit 'イベントを編集', :class => 'btn btn-default' %>
<% end %>    
</p>
<% end %>

<%= link_to '戻る',
              user_events_path(@user), :class => 'btn btn-default'  %>
